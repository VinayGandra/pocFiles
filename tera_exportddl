SELECT 'SHOW TABLE ' || TRIM(DATABASENAME) || '.' ||TRIM(TABLENAME) || ';' FROM DBC.TABLES
WHERE TABLEKIND = 'T' AND DATABASENAME='retail' ORDER BY DATABASENAME, TABLENAME ASC; 

SHOW TABLE retail.AREA;
SHOW TABLE retail.CLIENT;
SHOW TABLE retail.CONTRACT;
SHOW TABLE retail.EMPLOYEE;
SHOW TABLE retail.ITEM;
SHOW TABLE retail.ITEMPPI;
SHOW TABLE retail.PRODUCT;
SHOW TABLE retail.PROVIDER;
SHOW TABLE retail.REGION;

.EXPORT FILE=./outfile.txt

.SET WIDTH 720

.SET TITLEDASHES OFF
